{
  "name": "ssnepenthe/metis",
  "description": "A small framework for simplifying some WordPress tasks.",
  "type": "library",
  "homepage": "https://github.com/ssnepenthe/metis",
  "license": "GPL-2.0",
  "require": {
    "php": ">=7.0",
    "illuminate/container": "^5.4"
  },
  "autoload": {
    "classmap": ["src/"],
    "files": ["inc/functions.php"]
  },
  "scripts": {
    "integration": "phpunit --bootstrap=tests/integration/bootstrap.php --color=always --testsuite=integration",
    "unit": "phpunit --bootstrap=tests/unit/bootstrap.php --color=always --testsuite=unit",
    "test": ["@integration", "@unit"]
  }
}
